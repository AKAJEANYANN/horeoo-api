{
  "name": "customer",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "uuidv4"
    },
    "nom": {
      "type": "string",
      "default": ""
    },
    "prenom": {
      "type": "string",
      "default": ""
    },
    "dateCreation": {
      "type": "date",
      "defaultFn": "now"
    },
    "approuve": {
      "type": "boolean",
      "default": false
    },
    "dateApprouve": {
      "type": "date",
      "default": ""
    },
    "cniRecto": {
      "type": "string",
      "default": ""
    },
    "cniVerso": {
      "type": "string",
      "default": ""
    },
    "numero": {
      "type": "string",
      "default": ""
    },
    "profil": {
      "type": "string",
      "default": ""
    },
    "code": {
      "type": "string",
      "default": ""
    },
    "actif": {
      "type": "boolean",
      "default": false
    },
    "desactifDate": {
      "type": "date",
      "default": ""
    },
    "device_fcm_token": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "appAccessToken",
      "polymorphic": {
        "foreignKey": "userId",
        "discriminator": "principalType"
      },
      "options": {
        "disableInclude": true
      }
    },
    "hebergementHasCustomers": {
      "type": "hasMany",
      "model": "hebergementHasCustomer",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      },
      "through": "hebergementHasCustomer"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "number"
    }
  ],
  "methods": {}
}
